{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Blickfang",
  "version": "1.0.2",
  "identifier": "com.unagi.blickfang",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Blickfang",
        "visible": false,
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": ["png"],
        "mimeType": "image/png",
        "name": "Blickfang Image"
      },
      {
        "ext": ["jpg", "jpeg"],
        "mimeType": "image/jpeg",
        "name": "Blickfang Image"
      },
      {
        "ext": ["webp"],
        "mimeType": "image/webp",
        "name": "Blickfang Image"
      },
      {
        "ext": ["gif"],
        "mimeType": "image/gif",
        "name": "Blickfang Image"
      },
      {
        "ext": ["bmp"],
        "mimeType": "image/bmp",
        "name": "Blickfang Image"
      }
    ]
  }
}
